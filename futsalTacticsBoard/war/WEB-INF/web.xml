<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xmlns="http://java.sun.com/xml/ns/javaee"
xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
	<servlet>
		<servlet-name>Download</servlet-name>
		<servlet-class>com.gae.mongry.futsalTacticsBoard.DownloadServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Download</servlet-name>
		<url-pattern>/download</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>Upload</servlet-name>
		<servlet-class>com.gae.mongry.futsalTacticsBoard.UploadServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Upload</servlet-name>
		<url-pattern>/upload</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>UserRegist</servlet-name>
		<servlet-class>com.gae.mongry.futsalTacticsBoard.UserRegistServlet</servlet-class>
	</servlet>
	<!-- TODO:consider partition of web API -->
	<servlet-mapping>
		<servlet-name>UserRegist</servlet-name>
		<url-pattern>/userRegist</url-pattern>
	</servlet-mapping>

	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>

	<!-- needs google account for authentication -->
	<!-- TODO:role is admin because service is not started -->
	<security-constraint>
		<web-resource-collection>
			<web-resource-name>download</web-resource-name>
			<url-pattern>/download/*</url-pattern>
		</web-resource-collection>
		<web-resource-collection>
			<web-resource-name>userRegist</web-resource-name>
			<url-pattern>/userRegist/*</url-pattern>
		</web-resource-collection>
		<auth-constraint>
			<role-name>admin</role-name>
		</auth-constraint>
	</security-constraint>

	<security-constraint>
		<web-resource-collection>
			<web-resource-name>admin</web-resource-name>
			<url-pattern>/admin/*</url-pattern>
		</web-resource-collection>
		<auth-constraint>
			<role-name>admin</role-name>
		</auth-constraint>
	</security-constraint>
</web-app>
